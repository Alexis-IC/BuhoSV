@using Buho.Models
@model EmpresaCLS
@{
    Page.Title = "Editar Empresa";
    Layout = "~/Views/Shared/_LayoutDefault.cshtml";
}

<div class="col-md-10 m-auto">

    @if (ViewBag.Error != null)
    {
        <script>alert('@ViewBag.Error.ToString()')</script>
    }

    @using (Html.BeginForm("Editar", "Empresa", FormMethod.Post,new { @id="frmPrincipal"}))
    {
        <div>
            @Html.LabelFor(p => p.idEmpresa)
            @Html.TextBoxFor(p => p.idEmpresa, new { @class = "form-control" ,@readOnly=true})
            @Html.ValidationMessage("idEmpresa", new { @class = "text-danger" })
        </div>
        <div>
            @Html.LabelFor(p => p.nombreComercial)
            @Html.TextBoxFor(p => p.nombreComercial, new { @class = "form-control" })
            @Html.ValidationMessage("nombreComercial", new { @class = "text-danger" })
        </div>
        <div>
            @Html.LabelFor(p => p.nombreAbreviado)
            @Html.TextBoxFor(p => p.nombreAbreviado, new { @class = "form-control" })
            @Html.ValidationMessage("nombreAbreviado", new { @class = "text-danger" })
        </div>
        <div>
            @Html.LabelFor(p => p.representanteLegal)
            @Html.TextBoxFor(p => p.representanteLegal, new { @class = "form-control" })
            @Html.ValidationMessage("representanteLegal", new { @class = "text-danger" })
        </div>
        <div>
            @Html.LabelFor(p => p.actividadEmpresa)
            @Html.TextBoxFor(p => p.actividadEmpresa, new { @class = "form-control" })
            @Html.ValidationMessage("actividadEmpresa", new { @class = "text-danger" })
        </div>
        <div>
            @Html.LabelFor(p => p.direccion)
            @Html.EditorFor(p => p.direccion, new { htmlAttributes=new { @class = "form-control" } })
            @Html.ValidationMessage("direccion", new { @class = "text-danger" })
        </div>
        <div>
            @Html.LabelFor(p => p.telefono)
            @Html.TextBoxFor(p => p.telefono, new { @class = "form-control" })
            @Html.ValidationMessage("telefono", new { @class = "text-danger" })
        </div>
        <div>
            @Html.LabelFor(p => p.email)
            @Html.TextBoxFor(p => p.email, new { @class = "form-control" })
            @Html.ValidationMessage("email", new { @class = "text-danger" })
        </div>
        <div>
            @Html.LabelFor(p => p.nit)
            @Html.TextBoxFor(p => p.nit, new { @class = "form-control" })
            @Html.ValidationMessage("nit", new { @class = "text-danger" })
        </div>
        <div>
            @Html.LabelFor(p => p.registro)
            @Html.TextBoxFor(p => p.registro, new { @class = "form-control" })
            @Html.ValidationMessage("telefono", new { @class = "text-danger" })
        </div>
        <div>
            @Html.LabelFor(p => p.capAutorizado)
            @Html.TextBoxFor(p => p.capAutorizado, new { @class = "form-control" })
            @Html.ValidationMessage("capAutorizado", new { @class = "text-danger" })
        </div>
        <div>
            @Html.LabelFor(p => p.capSuscrito)
            @Html.TextBoxFor(p => p.capSuscrito, new { @class = "form-control" })
            @Html.ValidationMessage("capSuscrito", new { @class = "text-danger" })
        </div>
        <div>
            @Html.LabelFor(p => p.capPagado)
            @Html.TextBoxFor(p => p.capPagado, new { @class = "form-control" })
            @Html.ValidationMessage("capPagado", new { @class = "text-danger" })
        </div><br />
              <div style="margin:auto">
                  <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#confirmModal">Actualizar</button>
                  @Html.ActionLink("Regresar", "Index", "Empresa", null, new { @class = "btn btn-danger" })
              </div>
    }
</div><br />
<script>
    function editar() { document.getElementById("frmPrincipal").submit(); }
</script>








