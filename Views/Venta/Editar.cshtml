@using Buho.Models
@model VentaCLS
@{
    Page.Title = "Editar Venta";
    Layout = "~/Views/Shared/_LayoutDefault.cshtml";
    List<SelectListItem> listaClientes = (List<SelectListItem>)ViewBag.lista;
}

    <div class="col-md-10 m-auto">

        @using (Html.BeginForm("Editar", "Venta", FormMethod.Post, new { @id = "frmPrincipal" }))
        {
            <div>
                @Html.LabelFor(p => p.idVenta)
                @Html.TextBoxFor(p => p.idVenta, new { @class = "form-control", @readOnly = true })
                @Html.ValidationMessage("idVenta", new { @class = "text-danger" })
            </div><br />
            <div>
                @Html.LabelFor(p => p.idCliente)
                @Html.DropDownList("idCliente",listaClientes,"Seleccione un cliente", new { @class = "form-control" })
                @Html.ValidationMessage("idCliente", new { @class = "text-danger" })
            </div><br />
            <div>
                @Html.LabelFor(p => p.fecha)
                @Html.EditorFor(p => p.fecha, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessage("fecha", new { @class = "text-danger" })
            </div><br />
            <div style="margin:auto">
                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#confirmModal">Actualizar</button>
                @Html.ActionLink("Regresar", "Index", "Venta", null, new { @class = "btn btn-danger" })
            </div>
        }
    </div>

<script>
    function editar() { document.getElementById("frmPrincipal").submit(); }
</script>